<%= form_with(model: question) do |form| %>
  <% if question.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(question.errors.count, "erro") %> impediram que esta questão fosse salva:</h2>
      <ul>
        <% question.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :subject_id, "Disciplina" %>
    <%= form.collection_select :subject_id,
        Subject.all,
        :id,
        :name,
        { prompt: "Selecione a disciplina" },
        { required: true,
          class: "select2",
          data: { controller: "select" } } %>
  </div>

  <div class="field">
    <%= form.label :topic_id, "Tópico" %>
    <%= form.collection_select :topic_id,
        Topic.all,
        :id,
        :name,
        { prompt: "Selecione o tópico" },
        { required: true,
          class: "select2",
          data: { controller: "select" } } %>
  </div>

  <div class="field">
    <%= form.label :difficulty_level, "Nível de Dificuldade" %>
    <%= form.select :difficulty_level,
        options_for_select([
          ["Fácil", "easy"],
          ["Médio", "medium"],
          ["Difícil", "hard"]
        ]),
        { prompt: "Selecione o nível de dificuldade" },
        required: true %>
  </div>

  <div class="actions">
    <%= form.submit "Gerar Questão", class: "button primary" %>
  </div>
<% end %>

<% content_for :styles do %>
  <style>
    .field {
      margin-bottom: 1rem;
    }

    .field label {
      display: block;
      margin-bottom: 0.5rem;
      font-weight: bold;
    }

    .field input[type="text"],
    .field select {
      width: 100%;
      padding: 0.5rem;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    .error-messages {
      color: #721c24;
      background-color: #f8d7da;
      border: 1px solid #f5c6cb;
      border-radius: 4px;
      padding: 1rem;
      margin-bottom: 1rem;
    }

    .button.primary {
      background-color: #007bff;
      color: white;
      padding: 0.5rem 1rem;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    .button.primary:hover {
      background-color: #0056b3;
    }
  </style>
<% end %>
